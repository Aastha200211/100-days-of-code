class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        if not nums:
            return 0
        
        s = set(nums)
        longest = 0

        for num in s:  # iterate over set (unique numbers)
            if num - 1 not in s:  # only start at the beginning of a sequence
                length = 1
                next_num = num + 1
                while next_num in s:
                    length += 1
                    next_num += 1
                longest = max(longest, length)

        return longest
