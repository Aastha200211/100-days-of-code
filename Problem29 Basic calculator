class Solution:
    def calculate(self, s: str) -> int:
        stack=[]
        number=0
        result=0
        sign=1
        for char in s:
            if char.isdigit():
                number=number*10+int(char)

            elif char in "+-":
                result+=sign*number
                number=0
                sign=1 if char=="+" else -1

            elif char == "(":
                stack.append(result)
                stack.append(sign)
                result, sign = 0, 1

            elif char == ")":
                result += sign * number
                number = 0
                result *= stack.pop()  # pop sign
                result += stack.pop()  # pop previous result

        return result + sign * number
    
